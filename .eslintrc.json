{
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "unused-imports"
  ],
  "extends": [
    "eslint-config-standard"
  ],
  "globals": {
    "autoSuiteName": "readonly"
  },
  // REF
  // https://github.com/standard/eslint-config-standard/blob/80b9734d817a9babc2d02bb30cfbc98265299a00/.eslintrc.json
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["off"], // trailing commas to your liking
    "semi": [
      "warn",
      "never",
      {
        "beforeStatementContinuationChars": "always"
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 0
      }
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "no-lone-blocks": "error",
    "padded-blocks": "off",
    "no-extra-boolean-cast": "off",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    // REF for more options: https://eslint.org/docs/latest/rules/no-unused-vars
    "no-unused-vars": "off", // (often nice to have imports around at devtime)
    // EXAMPLE recommended this â†“, setting top-level no-unused-vars to "off"
    "unused-imports/no-unused-imports": "off",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ],
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true
      }
    ]
  } // rules
}

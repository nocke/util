{
  "name": "@nocke/util",
  "version": "0.1.2",
  "license": "MIT",
  "description": "NodeJS utilities and helpers – logging, asserts, coloring. In particular useful for writing scripts.",
  "type": "module",
  "author": "Frank Nocke",
  "scripts": {
    "clean": "rimraf node_modules/",
    "start": "./examples/demo.js",
    "test": "mocha --loader=esmock",

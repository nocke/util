  "homepage": "https://github.com/nocke/util#readme",
  "bugs": {
    "url": "https://github.com/nocke/util/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nocke/util.git"
  },
  "main": "main.js",
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.34.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "esmock": "^2.1.0",
    "mocha": "^10.2.0",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "resolutions": {
    "esquery": "1.4.0"
  },
